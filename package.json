{
  "name": "cult-of-threads",
  "private": true,
  "scripts": {
    "reset:npm": "bun rm:npm && bun install",
    "rm:npm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "build": "dotenv -e .env -- turbo run build",
    "dev": "dotenv -e .env -- turbo run dev",
    "lint": "dotenv -e .env -- turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "gen:supabase": "dotenv -e .env -- sh -c 'bunx supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/supabase/src/database.types.ts'"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@platejs/basic-nodes": "^49.0.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toolbar": "^1.1.10",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-form": "^1.12.1",
    "@tanstack/react-query": "^5.80.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "lucide-react": "^0.539.0",
    "motion": "^11.18.2",
    "platejs": "^49.1.5",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-sparkle": "^2.0.0",
    "react-spinners": "^0.17.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.4",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "yet-another-react-lightbox": "^3.25.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@types/validator": "^13.15.1",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "dotenv-cli": "^10.0.0",
    "globals": "^15.15.0",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vite": "^7.1.4"
  },
  "packageManager": "bun@1.2.20",
  "engines": {
    "node": ">=18"
  }
}
